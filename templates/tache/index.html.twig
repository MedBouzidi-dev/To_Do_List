{% extends 'base.html.twig' %}

{% block title %}Liste des taches{% endblock %}

{% block body %}
    <h1 class="mb-4">üì∞ Taches (depuis la BDD)</h1>

    {% if taches is empty %}
        <div class="alert alert-info">
            Aucun tache en base de donn√©es. 
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-bordered table-hover mt-4">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tache in taches %}
                        <tr {% if tache.terminee %}
                        style="text-decoration: line-through;"{% endif %}>
                            <td class="text-center">{{ tache.id }}</td>
                            <td>{{ tache.titre }}</td>
                            <td>{{ tache.deteCreation|date('d/m/Y') }}</td>
                            <td class="text-center">
                                {% if tache.terminee %}
                                    <span class="badge bg-success">‚úÖ effectu√©e</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">üìù non effectu√©e</span>
                                {% endif %}
                            </td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <p class="mt-3 text-muted">
            {{ taches|length }} tache(s) en base de donn√©es
        </p>
    {% endif %}
{% endblock %}